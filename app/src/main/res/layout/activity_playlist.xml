<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_playlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.playlist.PlaylistActivity"
        tools:ignore="ContentDescription">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:fitsSystemWindows="true"
            app:expanded="true">

            <com.google.android.material.appbar.SubtitleCollapsingToolbarLayout
                android:id="@+id/tool_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedSubtitleTextAppearance="@style/PlaylistCollapsedSubTitleTextAppearance"
                app:collapsedTitleTextAppearance="@style/PlaylistCollapsedTitleTextAppearance"
                app:expandedSubtitleTextAppearance="@style/PlaylistExpandedSubTitleTextAppearance"
                app:expandedTitleMarginBottom="16dp"
                app:expandedTitleMarginStart="16dp"
                app:expandedTitleTextAppearance="@style/PlaylistExpandedTitleTextAppearance"
                app:layout_scrollFlags="exitUntilCollapsed"
                app:statusBarScrim="@color/blue_900"
                app:subtitle="共有xxx首歌曲"
                app:title="@string/title_favorite_music"
                app:toolbarId="@+id/tool_bar">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ac_playlist_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />

                <ImageView
                    android:id="@+id/ac_playlist_top_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_shadow_height"
                    android:background="@drawable/gradient_background_flipped"
                    android:fitsSystemWindows="true" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/playlist_menu"
                    app:navigationIcon="@drawable/ic_arrow_back_write"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </com.google.android.material.appbar.SubtitleCollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/windowBackground"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/rv_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ac_playlist_tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:text="@string/playlist_description"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/normal_text_size" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutAnimation="@anim/recycle_view_animation"
                    android:overScrollMode="never"
                    app:layoutManager="LinearLayoutManager"
                    tools:listitem="@layout/item_local_track" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ac_playlist_tv_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="@string/hint_no_more_content"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="invisible" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
