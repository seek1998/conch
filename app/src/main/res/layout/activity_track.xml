<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ui_now_playing_metadata"
            type="com.example.conch.ui.track.NowPlayingMetadata" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_track_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.track.TrackActivity"
        tools:ignore="HardcodedText">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:tag="activity_track"
                android:textAlignment="gravity"
                app:menu="@menu/activity_track_toolbar_menu"
                app:navigationIcon="@drawable/ic_arrow_back">

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_track"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:checkable="false"
            android:clickable="false"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/seekbar"
            app:layout_constraintStart_toStartOf="@+id/seekbar"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintVertical_bias="0.1">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_album_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:contentDescription="null"
                android:src="@drawable/ic_music_note" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_previous_track"
            android:layout_width="232dp"
            android:layout_height="232dp"
            android:layout_marginEnd="16dp"
            android:background="@color/divider"
            android:checkable="false"
            android:clickable="false"
            app:cardCornerRadius="32dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/cv_track"
            app:layout_constraintEnd_toStartOf="@+id/cv_track"
            app:layout_constraintTop_toTopOf="@+id/cv_track">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_previous_album_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="专辑图片" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_next_track"
            android:layout_width="232dp"
            android:layout_height="232dp"
            android:layout_marginStart="16dp"
            android:background="@color/divider"
            android:checkable="false"
            android:clickable="false"
            app:cardCornerRadius="32dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/cv_track"
            app:layout_constraintStart_toEndOf="@+id/cv_track"
            app:layout_constraintTop_toTopOf="@+id/cv_track">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_next_album_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="专辑图片" />

        </com.google.android.material.card.MaterialCardView>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:clickable="true"
            android:focusable="true"
            android:maxHeight="8dp"
            android:minHeight="8dp"
            android:paddingVertical="8dp"
            android:progressTint="@color/icons"
            android:secondaryProgressTint="@color/secondary_text"
            android:splitTrack="true"
            android:thumb="@drawable/ic_thumb"
            android:thumbTint="@color/icons"
            app:layout_constraintBottom_toTopOf="@+id/btn_play"
            app:layout_constraintEnd_toEndOf="@+id/btn_library_add"
            app:layout_constraintStart_toStartOf="@+id/btn_favorite"
            app:layout_constraintTop_toBottomOf="@+id/cv_track"
            app:layout_constraintVertical_bias="0.8"
            app:thumbRadius="8dp" />

        <TextView
            android:id="@+id/track_progress_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:padding="4dp"
            android:text="00:00"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/seekbar"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="@+id/seekbar"
            app:layout_constraintTop_toBottomOf="@+id/seekbar"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/track_progress_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:padding="4dp"
            android:text="00:00"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/seekbar"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toStartOf="@+id/seekbar"
            app:layout_constraintTop_toBottomOf="@+id/seekbar"
            tools:ignore="SmallSp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_track_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal|start"
            android:text="@={ui_now_playing_metadata.title, default=标题}"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/extra_big_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/seekbar"
            app:layout_constraintEnd_toEndOf="@+id/cv_track"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/cv_track"
            app:layout_constraintTop_toBottomOf="@+id/cv_track"
            app:layout_constraintVertical_bias="0.2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_track_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:alpha="0.8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@={ui_now_playing_metadata.subtitle, default=作者}"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_track_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_track_title" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_play"
            android:layout_width="@dimen/large_play_icon_size"
            android:layout_height="@dimen/large_play_icon_size"
            android:background="@color/blue_900"
            android:padding="4dp"
            android:clickable="true"
            android:src="@drawable/asl_playpause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/appBarLayout"
            app:layout_constraintVertical_bias="0.85"
            app:shapeAppearance="@style/circleImageStyle"
            app:strokeWidth="4dp"
            app:strokeColor="@color/blue_900" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_previous_track"
            android:layout_width="@dimen/small_play_icon_size"
            android:layout_height="@dimen/small_play_icon_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/btn_play"
            app:layout_constraintEnd_toStartOf="@+id/btn_play"
            app:layout_constraintStart_toEndOf="@+id/btn_play_mode"
            app:layout_constraintTop_toTopOf="@+id/btn_play" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_next_track"
            android:layout_width="@dimen/small_play_icon_size"
            android:layout_height="@dimen/small_play_icon_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/btn_play"
            app:layout_constraintEnd_toStartOf="@+id/btn_queue_track"
            app:layout_constraintStart_toEndOf="@+id/btn_play"
            app:layout_constraintTop_toTopOf="@+id/btn_play" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_play_mode"
            android:layout_width="@dimen/small_play_icon_size"
            android:layout_height="@dimen/small_play_icon_size"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/playmode"
            app:layout_constraintBottom_toBottomOf="@+id/btn_previous_track"
            app:layout_constraintEnd_toEndOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="@+id/btn_favorite"
            app:layout_constraintTop_toTopOf="@+id/btn_previous_track" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_queue_track"
            android:layout_width="@dimen/small_play_icon_size"
            android:layout_height="@dimen/small_play_icon_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_queue_music_32"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/btn_next_track"
            app:layout_constraintEnd_toEndOf="@+id/btn_library_add"
            app:layout_constraintStart_toStartOf="@+id/btn_library_add"
            app:layout_constraintTop_toTopOf="@+id/btn_next_track" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_favorite"
            android:layout_width="@dimen/small_play_icon_size"
            android:layout_height="@dimen/small_play_icon_size"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearance="@style/itemPlaylistImageStyle"
            app:srcCompat="@drawable/favorite_mode" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_library_add"
            android:layout_width="@dimen/small_play_icon_size"
            android:layout_height="@dimen/small_play_icon_size"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_library_add_blue900"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearance="@style/itemPlaylistImageStyle" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/app_name_en"
            android:textColor="@color/light_green_700"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_favorite"
            app:layout_constraintEnd_toStartOf="@+id/btn_library_add"
            app:layout_constraintStart_toEndOf="@+id/btn_favorite"
            app:layout_constraintTop_toTopOf="@+id/btn_favorite" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>