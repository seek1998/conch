<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.example.conch.data.model.User" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.UserActivity"
        tools:ignore="LabelFor">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:tag="activity_user"
                android:textAlignment="gravity"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:title="@string/user">

            </com.google.android.material.appbar.MaterialToolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="HardcodedText">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ac_user_head_portrait"
                    android:layout_width="@dimen/head_portrait_size"
                    android:layout_height="@dimen/head_portrait_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="24dp"
                    android:clickable="true"
                    android:src="@drawable/ic_account_box" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:padding="8dp"
                    android:text="基本"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/normal_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:padding="8dp"
                        android:text="UID"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/normal_text_size" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ac_user_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end|center_vertical"
                        android:padding="8dp"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/normal_text_size"
                        tools:text="12345678" />

                </LinearLayout>

                <include layout="@layout/widget_divider_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:padding="8dp"
                        android:text="@string/email"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/normal_text_size" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ac_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end|center_vertical"
                        android:padding="8dp"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/normal_text_size"
                        tools:text="1309882195@qq.com" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:padding="8dp"
                    android:text="不可修改"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/small_text_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:padding="8dp"
                        android:text="昵称"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/normal_text_size" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ac_user_save_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:padding="8dp"
                        android:text="保存"
                        android:textColor="@color/blue_900"
                        android:textSize="@dimen/normal_text_size"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:padding="8dp"
                        android:text="@string/display_name"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/normal_text_size" />

                    <EditText
                        android:id="@+id/ac_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="end|center_vertical"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxEms="8"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/normal_text_size"
                        tools:text="任东鸣" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ac_user_name_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:padding="8dp"
                    android:textColor="@color/warning"
                    android:textSize="@dimen/small_text_size"
                    tools:text="不超过8个字" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:padding="8dp"
                        android:text="密码"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/normal_text_size" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/ac_user_update_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:padding="8dp"
                        android:text="更新"
                        android:textColor="@color/blue_900"
                        android:textSize="@dimen/normal_text_size"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:padding="8dp"
                        android:text="旧密码"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/normal_text_size" />

                    <EditText
                        android:id="@+id/ac_user_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="end|center_vertical"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/normal_text_size"
                        tools:text="1234567890" />

                </LinearLayout>

                <include layout="@layout/widget_divider_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:padding="8dp"
                        android:text="新密码"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/normal_text_size" />

                    <EditText
                        android:id="@+id/ac_user_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="end|center_vertical"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/normal_text_size"
                        tools:text="1234567890" />

                </LinearLayout>

                <include layout="@layout/widget_divider_line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:padding="8dp"
                        android:text="确认密码"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/normal_text_size" />

                    <EditText
                        android:id="@+id/ac_user_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="end|center_vertical"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/normal_text_size"
                        tools:text="1234567890" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ac_user_password_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:padding="8dp"
                    android:textColor="@color/warning"
                    android:textSize="@dimen/small_text_size"
                    tools:text="确认密码和新密码不一致" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ac_user_exit"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="48dp"
                    android:layout_marginVertical="32dp"
                    android:layout_marginTop="16dp"
                    android:padding="16dp"
                    android:text="@string/exit"
                    android:textColor="@color/warning"
                    app:cornerRadius="@dimen/circle_button_corner_radius" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>