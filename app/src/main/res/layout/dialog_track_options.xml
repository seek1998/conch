<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_track_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_track_options_shape"
    android:elevation="8dp"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_track_options_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|start"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:padding="4dp"
        android:text="@string/track_title"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_track_options_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|start"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:text="@string/track_size"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/small_text_size" />

    <com.google.android.material.internal.BaselineLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="24dp"
        android:alpha="0.25"
        android:background="@color/divider" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="16dp"
        android:overScrollMode="never"
        android:paddingEnd="16dp"
        android:scrollbars="none"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dialog_track_options_btn_play"
                style="@style/ExoMediaButton"
                android:layout_width="@dimen/dialog_track_options_item_width"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/small_play_icon_size"
                    android:layout_height="@dimen/small_play_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_play_arrow_blue900"
                    app:shapeAppearance="@style/ExoMediaButton" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="播放"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_track_options_btn_favorite"
                style="@style/ExoMediaButton"
                android:layout_width="@dimen/dialog_track_options_item_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/dialog_track_options_favorite_icon"
                    android:layout_width="@dimen/small_play_icon_size"
                    android:layout_height="@dimen/small_play_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/favorite_mode" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dialog_track_options_favorite_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="收藏"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_track_options_btn_add"
                style="@style/ExoMediaButton"
                android:layout_width="@dimen/dialog_track_options_item_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/small_play_icon_size"
                    android:layout_height="@dimen/small_play_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_add_box_blue900" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="加到歌单"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_track_options_btn_delete"
                style="@style/ExoMediaButton"
                android:layout_width="@dimen/dialog_track_options_item_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/small_play_icon_size"
                    android:layout_height="@dimen/small_play_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_delete_forever_blue900" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="删除"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_track_options_btn_cloud_upload"
                style="@style/ExoMediaButton"
                android:layout_width="@dimen/dialog_track_options_item_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/small_play_icon_size"
                    android:layout_height="@dimen/small_play_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_cloud_upload_blue900" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="上传"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_track_options_btn_cloud_download"
                style="@style/ExoMediaButton"
                android:layout_width="@dimen/dialog_track_options_item_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/small_play_icon_size"
                    android:layout_height="@dimen/small_play_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_cloud_download_blue900" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="下载"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <com.google.android.material.internal.BaselineLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="24dp"
        android:alpha="0.25"
        android:background="@color/divider" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_track_options_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/cancel" />

</LinearLayout>

