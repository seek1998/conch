<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/fragment_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.cloud.CloudFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:background="@color/windowBackground"
            app:expanded="false">

            <com.google.android.material.appbar.SubtitleCollapsingToolbarLayout
                android:id="@+id/tool_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedSubtitleTextAppearance="@style/CloudCollapsedSubTitleTextAppearance"
                app:collapsedTitleTextAppearance="@style/CloudCollapsedTitleTextAppearance"
                app:expandedSubtitleTextAppearance="@style/CloudExpandedSubTitleTextAppearance"
                app:expandedTitleMarginBottom="8dp"
                app:expandedTitleMarginStart="16dp"
                app:expandedTitleTextAppearance="@style/CloudExpandedTitleTextAppearance"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:subtitle="共有xxx首歌曲"
                app:title="@string/title_cloud"
                app:toolbarId="@+id/tool_bar">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/cloud_menu"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </com.google.android.material.appbar.SubtitleCollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="48dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="48dp">

                <LinearLayout
                    android:id="@+id/rv_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layoutAnimation="@anim/recycle_view_animation"
                        android:overScrollMode="never"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbars="vertical"
                        app:layoutManager="LinearLayoutManager"
                        tools:listitem="@layout/item_cloud_track" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/rv_playlist_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/windowBackground"
                        android:gravity="center"
                        android:paddingTop="16dp"
                        android:paddingBottom="96dp"
                        android:text="@string/hint_no_more_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/small_text_size"
                        android:visibility="invisible" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>