<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ExoMediaButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:clickable="true"
    tools:context=".ui.main.MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_playlist_cover"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@color/divider"
        android:src="@drawable/ic_conch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/itemPlaylistImageStyle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_playlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/playlist"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/item_playlist_cover"
        app:layout_constraintStart_toStartOf="@+id/item_playlist_cover"
        app:layout_constraintTop_toBottomOf="@+id/item_playlist_cover" />

</androidx.constraintlayout.widget.ConstraintLayout>